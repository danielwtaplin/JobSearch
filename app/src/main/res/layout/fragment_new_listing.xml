<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.activities.dwtaplin.jobsearchfinal.fragments.NewListingFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingRight="10dp"
                android:text="Job title"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editJobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:hint="Enter job title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingRight="10dp"
                android:text="Company"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:hint="Enter company" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingRight="10dp"
                android:text="Job type"
                android:textSize="14sp"
                android:textStyle="bold" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jobTypeSpinner"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingRight="10dp"
                android:text="Location"
                android:textSize="14sp"
                android:textStyle="bold" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jobLocationSpinner"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"></Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingRight="10dp"
                android:text="Payment type"
                android:textSize="14sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnWage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wage"
                    style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnAddSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="salary"
                    style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="Job description"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingRight="10dp"/>

            <EditText
                android:id="@+id/editDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="5"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingRight="10dp"
                android:text="Closing date"
                android:textSize="14sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnCalender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="calender"
                android:layout_marginLeft="5dp"
                style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:background="?android:attr/selectableItemBackground"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingRight="10dp"
                android:text="Qualifications"
                android:textSize="14sp"
                android:textStyle="bold" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/qualificationsSpinner"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"></Spinner>
            <Button
            android:id="@+id/btnAddListing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add listing"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
